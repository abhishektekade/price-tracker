{
  "manifest_version": 2,

  "name": "Price tracker",
  "description": "It is a Price Tracker chrome Extension that tracks prices on different E-commerse Websites.",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Price Tracker"
  }
}
