{
  "manifest_version": 2,

  "name": "Price tracker",
  "description": "It is a Price Tracker chrome Extension that tracks prices on different E-commerse Websites.",
  "version": "1.0",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "logo.png",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "*://*/*"]
}
